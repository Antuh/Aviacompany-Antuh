        <TextBox x:Name="tb_idclient" HorizontalAlignment="Left" Height="27" Margin="41,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontSize="14"/>
        <TextBox x:Name="tb_typebag" HorizontalAlignment="Left" Height="27" Margin="41,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontSize="14"/>
