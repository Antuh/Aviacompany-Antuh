        <TextBox x:Name="tb_redactbaggagetoid" HorizontalAlignment="Left" Height="33" Margin="245,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" RenderTransformOrigin="0.476,0.618" FontSize="16"/>

